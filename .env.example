# Google Sheets API Configuration
GOOGLE_SPREADSHEET_ID=your_spreadsheet_id_here

# Google API Credentials (optional - will use files if not set)
GOOGLE_CREDENTIALS_FILE=google_credentials.json

# For testing with actual Google Sheets API
# Uncomment and set this if you want to use environment variables instead of files
# GOOGLE_SHEETS_CREDENTIALS={"web":{"client_id":"...","client_secret":"..."}}
# 
# Note: For production/GitHub Actions, use a Service Account instead of OAuth2 credentials
# Service Account credentials should include "type": "service_account" and a private_key 

# Email Subscription Service Configuration
# Get these from your Resend dashboard: https://resend.com

# Resend API key for sending emails and managing contact lists
RESEND_API_KEY=your_resend_api_key_here

# Resend Audience ID for storing subscribers
# Create an audience in Resend dashboard and copy the ID
RESEND_CONTACT_LIST_ID=your_audience_id_here

# Email address to send from (must be verified in Resend)
FROM_EMAIL=noreply@yourdomain.com