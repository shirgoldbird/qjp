---
export interface Props {
  href: string;
  text: string;
  className?: string;
  external?: boolean;
}

const { href, text, className = "", external = false } = Astro.props;
---

<div class={`cta-wrapper ${className}`}>
  <a 
    href={href} 
    class="cta-button"
    target={external ? "_blank" : undefined}
    rel={external ? "noopener noreferrer" : undefined}
  >
    {text}
  </a>
</div>

<style>
.cta-wrapper {
  margin-top: 2.5rem;
  text-align: center;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  padding: 0.75rem 1.5rem;
  background: #aaf0d1;
  color: #1a1a1a;
  font-size: 1.125rem;
  font-weight: 600;
  border-radius: 0.375rem;
  border: 1.5px solid #aaf0d1;
  text-decoration: none;
  box-shadow: 0 1px 3px 0 rgba(0,0,0,0.04);
  transition: background 0.15s, color 0.15s, border 0.15s;
}

.cta-button:hover {
  background: #7be0b2;
  border-color: #7be0b2;
  color: #1a1a1a;
}

.cta-button:focus {
  outline: none;
  box-shadow: 0 0 0 3px #aaf0d180;
}
</style> 