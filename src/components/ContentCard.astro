---
export interface Props {
  title?: string;
  className?: string;
}

const { title, className = "" } = Astro.props;
---

<div class={`content-card ${className}`}>
  {title && <h1 class="content-title">{title}</h1>}
  <div class="content-body">
    <slot />
  </div>
</div>

<style>
.content-card {
  background: #fff;
  border-left: 8px solid #aaf0d1;
  border-radius: 0.5rem;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.06);
  padding: 2.5rem;
  margin-bottom: 2rem;
}

.content-title {
  font-family: 'Playfair Display', serif;
  font-size: 2.5rem;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 1.5rem;
  letter-spacing: -0.01em;
}

.content-body {
  font-family: 'Inter', system-ui, sans-serif;
  font-size: 1.125rem;
  line-height: 1.7;
  color: #374151;
}

.content-body h2 {
  font-family: 'Playfair Display', serif;
  font-size: 1.5rem;
  font-weight: bold;
  color: #1a1a1a;
  margin-top: 2rem;
  margin-bottom: 0.75rem;
  letter-spacing: -0.01em;
}

.content-body p {
  margin-bottom: 1rem;
}

.content-body ul {
  margin-bottom: 1rem;
  padding-left: 1.5rem;
}

.content-body li {
  margin-bottom: 0.5rem;
}

.content-body a {
  color: #aaf0d1;
  text-decoration: underline;
  transition: color 0.15s;
}

.content-body a:hover {
  color: #7be0b2;
}
</style> 