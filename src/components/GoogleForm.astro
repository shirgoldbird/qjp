---
export interface Props {
  formId: string;
  height?: string;
  title?: string;
}

const { formId, height = "800", title = "Google Form" } = Astro.props;
---

<div class="form-embed-wrapper">
  <iframe 
    src={`https://docs.google.com/forms/d/e/${formId}/viewform?embedded=true`}
    width="100%" 
    height={height}
    frameborder="0" 
    marginheight="0" 
    marginwidth="0"
    class="google-form-embed"
    title={title}
  >
    Loadingâ€¦
  </iframe>
</div>

<style>
.form-embed-wrapper {
  margin-bottom: 2.5rem;
  border-radius: 0.5rem;
  overflow: hidden;
  box-shadow: 0 1px 3px 0 rgba(0,0,0,0.1);
  background: var(--bg-card);
  border: 1px solid var(--border-primary);
}

.google-form-embed {
  border: none;
  border-radius: 0.5rem;
}
</style> 