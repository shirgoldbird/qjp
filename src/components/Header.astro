---
const currentPath = Astro.url.pathname;
---

<header class="bg-white border-l-8 rounded-lg shadow-md px-8 py-4 flex items-center gap-4 mb-6" style="border-color: #2de2c5;">
  <a href="/" class="flex items-center gap-3">
    <span class="inline-flex items-center justify-center rounded-full w-8 h-8">
      <svg viewBox="0 0 24 24" fill="#e4576e" width="24" height="24">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
      </svg>
    </span>
    <span class="font-serif text-2xl md:text-3xl font-bold text-[#1a1a1a] tracking-tight" style="font-family: 'Playfair Display', serif;">
      Queer Jewish Personals
    </span>
  </a>
  <nav class="ml-auto flex items-center gap-6">
    <a href="/" class="text-base font-medium text-gray-700 hover:text-[#2de2c5] transition-colors">Browse</a>
    <a href="/about" class="text-base font-medium text-gray-700 hover:text-[#2de2c5] transition-colors">About</a>
    <a href="/submit" class="text-base font-medium text-gray-700 hover:text-[#2de2c5] transition-colors">Submit</a>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script> 