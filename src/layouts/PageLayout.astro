---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<Layout title={title} description={description} image={image}>
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <section class="py-8">
      <div class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Content Card -->
        <div class="content-card">
          <slot />
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
.content-card {
  background: #fff;
  border-left: 8px solid #aaf0d1;
  border-radius: 0.5rem;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.06);
  padding: 2.5rem;
  margin-bottom: 2rem;
}

/* Markdown content styling */
:global(.content-card h1) {
  font-family: 'Playfair Display', serif;
  font-size: 2.5rem;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 1.5rem;
  letter-spacing: -0.01em;
}

:global(.content-card h2) {
  font-family: 'Playfair Display', serif;
  font-size: 1.5rem;
  font-weight: bold;
  color: #1a1a1a;
  margin-top: 2rem;
  margin-bottom: 0.75rem;
  letter-spacing: -0.01em;
}

:global(.content-card p) {
  font-family: 'Inter', system-ui, sans-serif;
  font-size: 1.125rem;
  line-height: 1.7;
  color: #374151;
  margin-bottom: 1rem;
}

:global(.content-card ul) {
  font-family: 'Inter', system-ui, sans-serif;
  font-size: 1.125rem;
  line-height: 1.7;
  color: #374151;
  margin-bottom: 1rem;
  padding-left: 1.5rem;
}

:global(.content-card li) {
  margin-bottom: 0.5rem;
}

:global(.content-card a) {
  color: #aaf0d1;
  text-decoration: underline;
  transition: color 0.15s;
}

:global(.content-card a:hover) {
  color: #7be0b2;
}

/* About page specific styles */
:global(.about-cta) {
  margin-top: 2.5rem;
  text-align: center;
}

:global(.about-button) {
  display: inline-flex;
  align-items: center;
  padding: 0.75rem 1.5rem;
  background: #aaf0d1;
  color: #1a1a1a;
  font-size: 1.125rem;
  font-weight: 600;
  border-radius: 0.375rem;
  border: 1.5px solid #aaf0d1;
  text-decoration: none;
  box-shadow: 0 1px 3px 0 rgba(0,0,0,0.04);
  transition: background 0.15s, color 0.15s, border 0.15s;
}

:global(.about-button:hover) {
  background: #7be0b2;
  border-color: #7be0b2;
  color: #1a1a1a;
}

:global(.about-button:focus) {
  outline: none;
  box-shadow: 0 0 0 3px #aaf0d180;
}
</style> 