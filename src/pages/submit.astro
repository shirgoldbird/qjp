---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Submit a Personal - Queer Jewish Personals">
  <Header />
  
  <main class="min-h-screen bg-gray-50">
    <section class="py-8">
      <div class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Submit Card -->
        <div class="submit-card">
          <h1 class="submit-title">Submit a Personal</h1>
          
          <div class="submit-content">
            <p class="submit-text">
              Submit your personal using the form below. You can also <a href="https://forms.gle/GQVZVUGYQDMdUSTH8" target="_blank">click here</a> to open the form in a new tab.
            </p>
              
            <p class="submit-text">
              Questions or issues? Reach out to Shir: <a href="mailto:shadchan@queerjews.com">shadchan@queerjews.com</a>.
            </p>
            
            <!-- Google Form Embed -->
            <div class="form-embed-wrapper">
              <iframe 
                src="https://docs.google.com/forms/d/e/1FAIpQLScbgS0JX0MtfGMkc26ki24_u-OqUwBmcItwMFh5_-ma9SEOyA/viewform?embedded=true" 
                width="100%" 
                height="800" 
                frameborder="0" 
                marginheight="0" 
                marginwidth="0"
                class="google-form-embed"
              >
                Loadingâ€¦
              </iframe>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
.submit-card {
  background: #fff;
  border-left: 8px solid #aaf0d1;
  border-radius: 0.5rem;
  box-shadow: 0 2px 8px 0 rgba(0,0,0,0.06);
  padding: 2.5rem;
  margin-bottom: 2rem;
}

.submit-title {
  font-family: 'Playfair Display', serif;
  font-size: 2.5rem;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 1rem;
  letter-spacing: -0.01em;
}

.submit-text {
  font-family: 'Inter', system-ui, sans-serif;
  font-size: 1.125rem;
  line-height: 1.7;
  color: #374151;
  margin-bottom: 2rem;
}

.form-embed-wrapper {
  margin-bottom: 2.5rem;
  border-radius: 0.5rem;
  overflow: hidden;
  box-shadow: 0 1px 3px 0 rgba(0,0,0,0.1);
}

.google-form-embed {
  border: none;
  border-radius: 0.5rem;
}

.submit-guidelines {
  border-top: 1px solid #e5e7eb;
  padding-top: 2rem;
}

.guidelines-title {
  font-family: 'Playfair Display', serif;
  font-size: 1.5rem;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 1rem;
  letter-spacing: -0.01em;
}

.guidelines-list {
  font-family: 'Inter', system-ui, sans-serif;
  font-size: 1rem;
  line-height: 1.6;
  color: #374151;
  padding-left: 1.5rem;
}

.guidelines-list li {
  margin-bottom: 0.5rem;
}
</style> 