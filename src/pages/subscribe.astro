---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Subscribe | Queer Jews">
  <Header />

  <main class="bg-gray-50 dark:bg-gray-900">
    <section class="py-12">
      <div class="w-full max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
            Subscribe
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            We'll send you emails about new personals, and occasional community
            updates.
          </p>
        </div>

        <!-- Subscription Form Card -->
        <div
          class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-8 max-w-2xl mx-auto"
        >
          <div class="text-center mb-8">
            <h2
              class="text-2xl font-semibold text-gray-900 dark:text-gray-100 mb-2"
            >
              Email Preferences
            </h2>
          </div>

          <form id="subscription-form" class="space-y-6">
            <div>
              <label
                for="subscription-email"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
              >
                Email Address
              </label>
              <input
                type="email"
                id="subscription-email"
                placeholder="your@email.com"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-aaf0d1 focus:border-aaf0d1 dark:bg-gray-700 dark:text-white"
              />
            </div>

            <div>
              <label
                for="subscription-frequency"
                class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2"
              >
                Notification Frequency
              </label>
              <select
                id="subscription-frequency"
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-aaf0d1 focus:border-aaf0d1 dark:bg-gray-700 dark:text-white"
              >
                <option value="immediate">Every new personal</option>
                <option value="weekly">Weekly digest</option>
                <option value="monthly">Monthly digest</option>
              </select>
            </div>

                        <button 
              type="submit" 
              class="subscribe-button"
            >
              Subscribe
            </button>
          </form>

          <div id="subscription-status" class="mt-4 text-center"></div>

          <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
            <div class="text-sm text-gray-500 dark:text-gray-400 text-center">
              <p>We respect your privacy. Unsubscribe anytime.</p>
              <p class="mt-2">
                By subscribing, you agree to receive emails from Queer Jews.
                <a href="/privacy" class="text-aaf0d1 hover:underline"
                  >Privacy Policy</a
                >
              </p>
            </div>
          </div>
        </div>

        <!-- Info Section -->
        <div class="mt-12 grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="text-center">
            <div
              class="w-12 h-12 bg-aaf0d1 rounded-lg flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-gray-900"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
            >
              Real-time Updates
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Get notified immediately when new personals are posted
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-12 h-12 bg-aaf0d1 rounded-lg flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-gray-900"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
            >
              Curated Digests
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Weekly or monthly summaries of recent activity
            </p>
          </div>

          <div class="text-center">
            <div
              class="w-12 h-12 bg-aaf0d1 rounded-lg flex items-center justify-center mx-auto mb-4"
            >
              <svg
                class="w-6 h-6 text-gray-900"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                ></path>
              </svg>
            </div>
            <h3
              class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-2"
            >
              Privacy First
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Your email is secure and you can unsubscribe anytime
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .subscribe-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 0.5rem 1rem;
    background: #aaf0d1;
    color: #1a1a1a;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 0.375rem;
    border: 1.5px solid #aaf0d1;
    text-decoration: none;
    box-shadow: 0 1px 3px 0 rgba(0,0,0,0.04);
    transition: background 0.15s, color 0.15s, border 0.15s;
    cursor: pointer;
  }

  .subscribe-button:hover {
    background: #7be0b2;
    border-color: #7be0b2;
    color: #1a1a1a;
  }

  .subscribe-button:focus {
    outline: none;
    box-shadow: 0 0 0 3px #aaf0d180;
  }

  .subscribe-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  /* Dark mode styles */
  .dark .subscribe-button {
    background: var(--border-accent);
    color: var(--bg-card);
    border-color: var(--border-accent);
  }

  .dark .subscribe-button:hover {
    background: #059669;
    border-color: #059669;
    color: var(--bg-card);
  }

  .dark .subscribe-button:focus {
    box-shadow: 0 0 0 3px #10b98180;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("subscription-form");
    const emailInput = document.getElementById("subscription-email");
    const frequencySelect = document.getElementById("subscription-frequency");
    const statusDiv = document.getElementById("subscription-status");
    const submitButton = form?.querySelector('button[type="submit"]');

    if (
      !form ||
      !emailInput ||
      !frequencySelect ||
      !statusDiv ||
      !submitButton
    ) {
      console.error("Subscription form elements not found");
      return;
    }

    form.addEventListener("submit", async function (e) {
      e.preventDefault();

      const email = emailInput.value.trim();
      const frequency = frequencySelect.value;

      if (!email || !email.includes("@")) {
        showStatus("Please enter a valid email address", "error");
        return;
      }

      // Disable form during submission
      submitButton.disabled = true;
      submitButton.textContent = "Subscribing...";
      showStatus("", "");

      try {
        const response = await fetch("/api/subscribe", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            email,
            frequency,
            timestamp: new Date().toISOString(),
          }),
        });

        if (response.ok) {
          showStatus(
            "✅ Successfully subscribed! Check your email to confirm.",
            "success"
          );
          emailInput.value = "";
          frequencySelect.value = "immediate";
        } else {
          const data = await response.json();
          showStatus(
            `❌ ${data.error || "Something went wrong. Please try again."}`,
            "error"
          );
        }
      } catch (error) {
        console.error("Subscription error:", error);
        showStatus("❌ Network error. Please try again.", "error");
      } finally {
        submitButton.disabled = false;
        submitButton.textContent = "Subscribe";
      }
    });

    function showStatus(message, type) {
      statusDiv.textContent = message;
      statusDiv.className = `text-sm ${type === "success" ? "text-green-600 dark:text-green-400" : "text-red-600 dark:text-red-400"}`;
    }
  });
</script>

